{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "args": [ "run" ],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["rollup"],
            "isBuildCommand": true
        },
        {
            "taskName": "scss",
            "args": ["build-css"]
        },
        {
            "taskName": "watch scss",
            "args": ["watch-css"],
            "isWatching": true
        }
    ]
}